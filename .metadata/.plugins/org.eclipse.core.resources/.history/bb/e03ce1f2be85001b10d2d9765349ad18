package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		double[] vect = new double[n]; //variável vect apontando para o vetor em Heap (novo duplo). Dados de alocação de vetor / matriz no Heap.
		
		for (int i=0; i<n; i++) { // variavel i inicia com valor 0
			vect[i] = sc.nextDouble(); //ele retornará o 'for' com 'i' igual a 1, e o vetor receberá os dados na posição 1 do vetor.
		}
		
		double sum = 0.0; //varivel da soma
		for (int i=0; i<n; i++) { //laço pegando os valores do vector e somando dentro da soma.
			sum += vect[i];
		}
		
		double avg = sum / n; // fazendo a média.
		System.out.printf("AVERAGE HEIGHT: %.2f%n", avg);
		
		
		sc.close();
	}

}
